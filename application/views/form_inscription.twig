{% extends "layout.twig" %}
{% block contenu %}
	<div class="row">
		<div class="panel">
			{{ form_open('c=Users_c&m=validFormInscription') }}

			<label for="login">Pseudo
			<input type="text" name="login" value="{{ set_value('login') }}"/></label>
			{{ form_error('login') }}

			<label for="pass">Mot de passe
			<input type="password" name="pass" value="{{ set_value('pass') }}"/></label>
			{{ form_error('pass') }}

			<label for="pass2">Confirmation de mot de passe
			<input type="password" name="pass2" value="{{ set_value('pass2') }}"/></label>
			{{ form_error('pass2') }}

			<label>Tranche d'âge
				<select name="catego_age">
					{% for key,value in liste_categoAge %}
						<option value="{{ key }}"
								{% if catego_age is defined and catego_age == key %}selected="selected" {% endif %} >
							{{ value }}
						</option>
					{% endfor %}
				</select>
				{{ form_error('catego_age') }}
			</label>

			<label for="code_postal">Code postal
			<input type="text" name="code_postal" value="{{ set_value('code_postal') }}"/></label>
			{{ form_error('code_postal') }}

			<div class="checkbox">
				<label>
					<input name="admin" type="checkbox"
						   value="1" {{ set_checkbox('admin', 1) }}> Créer un compte administrateur
				</label>
			</div>

			<input class="button small" type="submit" value="Inscription"/>
			<input class="button small secondary" type="reset" value="Réinitialiser">

			{{ form_close() }}
		</div>
	</div>
{% endblock %}
